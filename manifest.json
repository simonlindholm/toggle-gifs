{
	"manifest_version": 2,
	"name": "Toggle animated GIFs",
	"description": "Start/stop GIF animations through a keyboard shortcut or by clicking them. You can also restart animations from the beginning, or disable animations by default.",
	"version": "2.0",
	"applications": {
		"gecko": {
			"id": "giftoggle@simonsoftware.se",
			"strict_min_version": "57.0"
		}
	},

	"permissions": ["storage", "<all_urls>", "webRequest", "webRequestBlocking", "browserSettings"],

	"background": {
		"scripts": ["background.js"]
	},

	"options_ui": {
		"page": "settings.html",
		"browser_style": true
	},

	"content_scripts": [{
		"matches": ["<all_urls>"],
		"all_frames": true,
		"match_about_blank": true,
		"run_at": "document_start",
		"js": ["content-script.js"]
	}]
}
